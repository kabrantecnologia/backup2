# Cappta Simulator - Production Environment (dev2)
# IMPORTANTE: Substituir os valores CAPPTA_ASAAS_* pelos valores reais antes do deploy

# Environment Configuration
ENVIRONMENT=prod
DEBUG=false
LOG_LEVEL=info

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
BASE_URL=https://simulador-cappta.kabran.com.br

# Authentication & Security (gerados automaticamente pelo script de deploy)
CAPPTA_API_TOKEN=cappta_prod_token_$(openssl rand -hex 16)
CAPPTA_WEBHOOK_SECRET=webhook_secret_$(openssl rand -hex 16)
CAPPTA_WEBHOOK_SIGNATURE_SECRET=signature_secret_$(openssl rand -hex 32)

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=1000
RATE_LIMIT_BURST=100
RATE_LIMIT_ENABLED=true

# Asaas Integration (SUBSTITUIR PELOS VALORES REAIS)
CAPPTA_ASAAS_API_KEY=SUBSTITUIR_PELA_API_KEY_REAL
CAPPTA_ASAAS_ACCOUNT_ID=SUBSTITUIR_PELO_ACCOUNT_ID_REAL
ASAAS_BASE_URL=https://sandbox.asaas.com/api/v3

# Tricket Integration
TRICKET_WEBHOOK_URL=https://dev2.tricket.kabran.com.br/functions/v1/cappta_webhook_receiver
TRICKET_API_BASE=https://dev2.tricket.kabran.com.br

# Webhook System
WEBHOOK_TIMEOUT=30
WEBHOOK_RETRY_ATTEMPTS=5
WEBHOOK_RETRY_DELAY=60

# Database Configuration
DATABASE_URL=sqlite:///./data/cappta_simulator_prod.db
DATABASE_POOL_SIZE=20
DATABASE_ECHO=false

# Security
ALLOWED_IPS=["0.0.0.0/0"]
TOKEN_EXPIRY_HOURS=24

# Monitoring & Observability
PROMETHEUS_ENABLED=true
HEALTH_CHECK_INTERVAL=30
